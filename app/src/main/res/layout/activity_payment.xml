<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    tools:context=".PaymentActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/number_lay"
        style="@style/textInputLayout"
        android:layout_marginTop="0dp"
        android:hint="bKash number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/number"
            style="@style/editText"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_lay"
        style="@style/textInputLayout"
        android:hint="bKash name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            style="@style/editText"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amount_lay"
        style="@style/textInputLayout"
        android:hint="amount">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amount"
            style="@style/editText"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/narration_lay"
        style="@style/textInputLayout"
        android:hint="narration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_lay">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/narration"
            style="@style/editText"
            android:imeOptions="actionDone"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="Submit"
        android:textAllCaps="false"/>

</LinearLayout>